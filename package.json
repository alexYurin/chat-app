    "views": "./src/views",
    "templators": "./src/templators",
    "utils": "./src/utils",
    "styles": "./src/styles",
    "types": "./src/types"
  },
  "engines": {
    "node": ">=12"
  },
  "targets": {
    "global": {
      "context": "browser",
      "outputFormat": "global"
    }
  },
  "repository": {
    "type": "git",
