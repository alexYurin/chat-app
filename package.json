{
  "name": "chat",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "dev": "parcel src/index.pug --port=3000 --open --no-cache",
    "start": "npm run build && node ./server.js",
    "build": "parcel build ./src/index.pug && cp _redirects dist",
    "lint": "eslint '**/*.{ts,tsx}'",
    "lint:styles": "stylelint '**/*.scss'",
    "format": "prettier --ignore-path .gitignore --write \"**/*.+(js|ts|json)\""
  },
  "alias": {
    "router": "./router",
    "static": "./static",
    "services": "./src/services",
    "layouts": "./src/layouts",
    "components": "./src/components",
    "views": "./src/views",
    "templators": "./src/templators",
    "utils": "./src/utils",
    "styles": "./src/styles"
  },
  "engines": {
    "node": ">=12"
  },
  "targets": {
    "global": {
      "context": "browser",
      "outputFormat": "global"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/alexYurin/middle.messenger.praktikum.yandex.git"
  },
  "author": "Yalex",
  "license": "ISC",
  "devDependencies": {
    "@parcel/optimizer-data-url": "2.8.2",
    "@parcel/transformer-inline-string": "2.8.2",
    "@parcel/transformer-pug": "2.8.2",
    "@parcel/transformer-sass": "2.8.2",
    "@parcel/transformer-typescript-tsc": "2.8.2",
    "@types/express": "4.17.15",
    "@types/node": "18.11.18",
    "@types/pug": "2.0.6",
    "@types/uuid": "9.0.0",
    "@typescript-eslint/eslint-plugin": "5.47.1",
    "@typescript-eslint/parser": "5.47.1",
    "assert": "2.0.0",
    "buffer": "5.7.1",
    "eslint": "8.30.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-prettier": "4.2.1",
    "os-browserify": "0.3.0",
    "parcel": "2.8.2",
    "parcel-plugin-prettier": "0.2.1",
    "parcel-reporter-clean-dist": "1.0.4",
    "parcel-resolver-ts-base-url": "1.3.1",
    "path-browserify": "1.0.1",
    "prettier": "2.8.3",
    "process": "0.11.10",
    "stylelint": "14.16.1",
    "stylelint-config-prettier-scss": "0.0.1",
    "stylelint-config-sass-guidelines": "9.0.1",
    "typescript": "4.9.4"
  },
  "dependencies": {
    "express": "4.18.2",
    "pug": "3.0.2",
    "uuid": "9.0.0"
  }
}
