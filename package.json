{
  "name": "chat",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "dev": "webpack serve --config ./webpack.development.js",
    "start": "npm run build && node ./server.js",
    "build": "MODE=production webpack --config ./webpack.production.js",
    "lint": "eslint '**/*.{ts,tsx}'",
    "lint:styles": "stylelint '**/*.scss'",
    "format": "prettier --ignore-path .gitignore --write \"**/*.+(js|ts|json)\"",
    "test": "ts-mocha -r src/test/test-env.ts --paths -p tsconfig.json **/*.spec.ts --recursive",
    "precommit": "lint-staged",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.scss": [
      "stylelint '**/*.scss'"
    ],
    "*.ts": [
      "ts-mocha -r src/test/test-env.ts --paths -p tsconfig.json **/*.spec.ts --recursive",
      "prettier --write .",
      "eslint --ext .ts src/ --fix"
    ]
  },
  "alias": {
    "router": "./router",
    "static": "./static",
    "api": "./src/api",
    "services": "./src/services",
    "layouts": "./src/layouts",
    "components": "./src/components",
    "views": "./src/views",
    "templators": "./src/templators",
    "utils": "./src/utils",
    "styles": "./src/styles",
    "types": "./src/types",
    "test": "./src/test"
  },
  "engines": {
    "node": ">=12"
  },
  "targets": {
    "global": {
      "context": "browser",
      "outputFormat": "global"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/alexYurin/middle.messenger.praktikum.yandex.git"
  },
  "author": "Yalex",
  "license": "ISC",
  "devDependencies": {
    "@types/chai": "4.3.5",
    "@types/expect": "24.3.0",
    "@types/express": "4.17.17",
    "@types/jsdom": "21.1.1",
    "@types/mocha": "10.0.1",
    "@types/node": "20.3.0",
    "@types/pug": "2.0.6",
    "@types/sinon": "10.0.15",
    "@types/uuid": "9.0.2",
    "@typescript-eslint/eslint-plugin": "5.59.9",
    "@typescript-eslint/parser": "5.59.9",
    "chai": "4.3.7",
    "css-loader": "6.8.1",
    "dotenv-webpack": "8.0.1",
    "eslint": "8.42.0",
    "eslint-config-prettier": "8.8.0",
    "eslint-plugin-prettier": "4.2.1",
    "eslint-webpack-plugin": "4.0.1",
    "html-webpack-plugin": "5.5.3",
    "html-webpack-pug-plugin": "4.0.0",
    "husky": "8.0.3",
    "jsdom": "22.1.0",
    "lint-staged": "13.2.2",
    "mini-css-extract-plugin": "2.7.6",
    "mocha": "10.2.0",
    "prettier": "2.8.8",
    "pug-loader": "2.4.0",
    "sass": "1.63.3",
    "sass-loader": "13.3.2",
    "sinon": "15.1.2",
    "style-loader": "3.3.3",
    "stylelint": "15.7.0",
    "stylelint-config-prettier-scss": "1.0.0",
    "stylelint-config-sass-guidelines": "10.0.0",
    "ts-loader": "9.4.3",
    "ts-mocha": "10.0.0",
    "typescript": "5.1.3",
    "webpack": "5.86.0",
    "webpack-cli": "5.1.4",
    "webpack-dev-server": "4.15.1",
    "webpack-merge": "5.9.0"
  },
  "dependencies": {
    "express": "4.18.2",
    "pug": "3.0.2",
    "uuid": "9.0.0"
  }
}
