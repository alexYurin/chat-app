    "eslint-webpack-plugin": "4.0.1",
    "html-webpack-plugin": "5.5.2",
    "html-webpack-pug-plugin": "^4.0.0",
    "mini-css-extract-plugin": "2.7.6",
    "prettier": "2.8.3",
    "pug": "3.0.2",
    "pug-loader": "2.4.0",
    "sass": "1.63.2",
    "sass-loader": "13.3.1",
    "style-loader": "3.3.3",
