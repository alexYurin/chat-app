-
  const classNames = {
    [`input_${status}`]: Boolean(status),
    [`${className}`]: Boolean(className),
    [`input_readonly`]: readonly,
    [`input_disabled`]: disabled,
  }

  console.log('TEMPLATE', message)

.input(class=classNames)
  .input__area
    input(
      id=id
      type=type
      name=name
      value=value
      form=form
      placeholder=placeholder
      required=required
    ).input__field
  if message
    p.input__message #{message}
